<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StudentSytem.DashboardController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Quản Lý Sinh Viên" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" /> <Label text="Xin chào, Admin" />
                        <Button fx:id="btnLogout" onAction="#handleLogout" mnemonicParsing="false" style="-fx-background-color: #e74c3c;" text="Đăng xuất" textFill="WHITE" />
                    </children>
                </HBox>

                <AnchorPane style="-fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                    <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Họ và tên:" />
                        <TextField fx:id="inputName" layoutX="80.0" layoutY="10.0" prefWidth="200.0" />

                        <Label layoutX="300.0" layoutY="14.0" text="Tuổi:" />
                        <TextField fx:id="inputAge" layoutX="340.0" layoutY="10.0" prefWidth="100.0" />
                        <Label layoutX="14.0" layoutY="50.0" text="Ngành học:" />
                        <TextField fx:id="inputMajor" layoutX="80.0" layoutY="46.0" prefWidth="360.0" />
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </AnchorPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnAdd" onAction="#addStudent" prefWidth="100.0" style="-fx-background-color: #2ecc71;" text="Thêm" textFill="WHITE" />
                        <Button fx:id="btnUpdate" onAction="#updateStudent" prefWidth="100.0" style="-fx-background-color: #3498db;" text="Cập nhật" textFill="WHITE" />
                        <Button fx:id="btnDelete" onAction="#deleteStudent" prefWidth="100.0" style="-fx-background-color: #e74c3c;" text="Xóa" textFill="WHITE" />
                        <Button fx:id="btnClear" onAction="#clearStudent" prefWidth="100.0" style="-fx-background-color: #95a5a6;" text="Làm mới" textFill="WHITE" />
                    </children>
                </HBox>

                <TableView fx:id="tableStudents" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colName" prefWidth="200.0" text="Họ và Tên" />
                        <TableColumn fx:id="colAge" prefWidth="100.0" text="Tuổi" />
                        <TableColumn fx:id="colMajor" prefWidth="300.0" text="Ngành Học" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>